{
  "manifest_version": 3,
  "name": "Active Learn (MVP)",
  "description": "One-card SRS reviews for ADHD-friendly learning",
  "version": "0.1",
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "icons": {"128": "icon.png"},
  "action": {}
}
