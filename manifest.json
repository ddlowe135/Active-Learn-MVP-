{
  "manifest_version": 3,
  "name": "Simple SRS",
  "description": "Build and review flashcards right in Chrome",
  "version": "0.1",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "contextMenus",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "settings.html",
  "icons": {"128": "icon.png"},
  "action": {"default_popup": "popup.html"}
}
